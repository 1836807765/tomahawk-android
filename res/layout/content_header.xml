<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content_header"
              android:layout_width="match_parent"
              android:layout_height="@dimen/header_height_large"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/header_clear_space"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gradient">

        <TextView
                android:id="@+id/content_header_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/primary_textcolor"
                android:textSize="@dimen/text_size_large"
                android:paddingLeft="@dimen/padding_small"
                android:paddingTop="@dimen/padding_medium"/>

        <TextView
                android:id="@+id/content_header_textview2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/secondary_textcolor"
                android:textSize="@dimen/text_size_small"
                android:paddingLeft="@dimen/padding_small"/>

    </LinearLayout>

</LinearLayout>
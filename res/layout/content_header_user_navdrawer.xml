<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content_header_user_navdrawer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/padding_large"
              android:paddingTop="@dimen/padding_superlarge"
              android:paddingBottom="@dimen/padding_superlarge"
              android:background="@drawable/selectable_background_tomahawk">

    <ImageView android:id="@+id/content_header_roundedimage_user_navdrawer"
               android:layout_width="@dimen/menu_item_height_userprofile"
               android:layout_height="@dimen/menu_item_height_userprofile"
               android:padding="@dimen/padding_verysmall"
               android:adjustViewBounds="false"
               android:scaleType="centerCrop"/>

    <TextView android:id="@+id/content_header_textview_user_navdrawer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingLeft="@dimen/padding_large"
              android:ellipsize="marquee"
              android:singleLine="true"
              android:textColor="@color/primary_textcolor_inverted"
              android:textSize="@dimen/text_size_large"/>

</LinearLayout>
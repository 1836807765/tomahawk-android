<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <org.tomahawk.tomahawk_android.ui.widgets.SquareHeightRelativeLayout
            android:id="@+id/content_header_image_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

        <ImageView
                android:id="@+id/content_header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_album_art_placeholder"/>

    </org.tomahawk.tomahawk_android.ui.widgets.SquareHeightRelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

        <FrameLayout
                android:id="@+id/fragmentLayout_listLayout_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">
        </FrameLayout>

        <FrameLayout
                android:id="@+id/fragmentLayout_gridLayout_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:layout_alignParentStart="true">
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <org.tomahawk.tomahawk_android.ui.widgets.SquareHeightRelativeLayout
            android:id="@+id/content_header_image_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1">

                <ImageView
                        android:id="@+id/content_header_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/no_album_art_placeholder"/>
                <ImageView
                        android:id="@+id/content_header_image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:src="@drawable/no_album_art_placeholder"/>

            </LinearLayout>

            <LinearLayout android:id="@+id/content_header_image_frame2"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:visibility="gone">

                <ImageView
                        android:id="@+id/content_header_image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:src="@drawable/no_album_art_placeholder"/>
                <ImageView
                        android:id="@+id/content_header_image4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:src="@drawable/no_album_art_placeholder"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height_medium"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/gradient_reverse">

            <TextView
                    android:id="@+id/content_header_textview2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@color/primary_textcolor"
                    android:textSize="@dimen/text_size_small"
                    android:paddingLeft="@dimen/padding_small"/>

        </LinearLayout>

    </org.tomahawk.tomahawk_android.ui.widgets.SquareHeightRelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

        <FrameLayout
                android:id="@+id/fragmentLayout_listLayout_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">
        </FrameLayout>

        <FrameLayout
                android:id="@+id/fragmentLayout_gridLayout_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:layout_alignParentStart="true">
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>